<% form_for @problem do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => "50x5"%>
  </p>
  <p>
    <%= f.label :desciption %><br />
    <%= f.text_area :desciption, :class => "mceEditor", :size => "100x15" %>
  </p>
  <p>
    <%= f.label :solution %><br />
    <%= f.text_area :solution, :class => "mceEditor", :size => "100x15" %>
  </p>
  <p><%= f.submit %></p>
<% end %>
