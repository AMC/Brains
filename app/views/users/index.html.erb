<% title "Users" %>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
  </tr>
  <% for user in @users %>
  
  <table>
    <tr>
      <td class="userInfo">
      <!--<%= image_tag user.avatar.url %><br />-->
      <%=h user.login %>        
      </td>
      <td class="title">
        <%=h user.email %>
      </td>
    </tr>
</table>
<div class="crud">
    <%= link_to "Show", user %>
    <%= link_to "Edit", edit_user_path(user) %>
    <%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %>
</div>
  <% end %>
</table>
